<div class="col-md-4">
  <div class="thumbnail">
    <%= link_to location_path(location) do %>
      <%= image_tag src = 'building.png', html_options = {class: 'menu-index-item'} %>
    <% end %>
    <div class="caption">
      <h3><%= location.locate %></h3>
      <p><%= location.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-1">
      <%= link_to 'Cập Nhật', edit_location_path(location), html_options={class:"btn btn-primary", remote: true} %> |
      <%= link_to 'Danh sách locations', locations_path, html_options={class:"btn btn-default"} %> |
      <%= link_to 'Xóa bỏ', location_path(location), method: :delete, class: "btn btn-danger", data: {confirm: "Bạn có chắc chắn không?"} %>
    </div>
    <br>
  </div>
</div>
